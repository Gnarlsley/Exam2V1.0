@model Product
@{
    ViewBag.Title = "Delete Product";
}
<div class="row mb-3">
    <div class="col-md-12">
        <h1 class="text-center">Confirm Deletion</h1>
    </div>
</div>
<div class="row mb-3">
    <div class="col-md-12">
        <h3 class="text-center">@Model.Name ($@Model.Price)</h3>
    </div>
</div>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="ProductId" />
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-6">
                    <button type="submit" class="btn btn-danger" style="display: block; width: 100%;">Delete</button>
                </div>
                <div class="col-6">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary"
                    style="display: block; width: 100%;">Cancel</a>
                </div>
            </div>
        </div>
    </div>
</form>